alias youtube='youtube-dl -t'
alias serve='python -m SimpleHTTPServer'
alias sfab='fab -f ~/.sfab/fabfile.py'
alias top='htop'
alias svnscrub='find . -name .svn -exec rm -rf {} \;'
alias ports='sudo lsof -i -P | grep -i "listen"'
alias dnsflush='dscacheutil -flushcache'
alias dmesg="sudo dmesg"
alias rest2html-css='rst2html --embed-stylesheet --stylesheet-path=/usr/share/python-docutils/s5_html/themes/default/print.css'
alias ls='ls -G'
alias lime='lime -n'
alias scratchdisk='diskutil erasevolume HFS+ "Scratch" `hdiutil attach -nomount ram://16384000`'
alias mate='lime -n'

function sshuttle(){
    /usr/local/sshuttle/sshuttle -r $1 0.0.0.0/0 -vv
}

function datedir(){
    mkdir `date '+%Y-%m-%d'`
}

function git(){hub "$@"}

wiki() {
        dig +short txt $1.wp.dg.cx
    }

function gh-get () {
  curl -#O $(echo $1 | sed 's|blob|raw|')
}


function mk (){ mkvirtualenv --no-site-packages -p $( which $1) $2}


beep() {
    echo -n '\a'
}


function tabc {
  NAME=$1; if [ -z "$NAME" ]; then NAME="Default"; fi
  osascript -e "tell application \"Terminal\" to set current settings of front window to settings set \"$NAME\""
}

function ssh {
  tabc "Solarized Dark"
  /usr/bin/ssh "$@"
  tabc "Visor"
}
